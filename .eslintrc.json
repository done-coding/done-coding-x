{
  "extends": ["alloy", "alloy/typescript"],
  "root": true,
  "env": {
    // Your environments (which contains several predefined global variables)
    //
    // browser: true,
    // node: true,
    // mocha: true,
    // jest: true,
    // jquery: true
  },
  "globals": {
    // Your global variables (setting to false means it's not allowed to be reassigned)
    //
    // myGlobal: false
  },
  "rules": {
    // Customize your rules
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/es/**",
    "**/lib/**",
    "**/dist/**",
    "**/dist-electron/**",
    "**/build/**",
    "**/types/**",
    "**/__test__/**",
    "**/coverage/**",
    "**/jest.config.js",
    "**/index.html"
  ]
}
